#include "minishell.h"

static int	is_option_echo(int argc, char **argv)
{
	int	i;

	i = 1;
	while (i < argc)
	{
		if (!ft_strcmp(argv[i], "-n"))
			return (1);
	}
	return (0);
}

int			echo_builtin(int argc, char **argv)
{
	int		flag;
	int		i;

	flag = option_echo(argc, argv);
	i = 0;
	while (++i < argc)
	{
		if (!ft_strcmp(argv[i], "-n"))
			continue ;
		ft_putstr_fd(argv[i], STDOUT_FILENO);
	}
	if (flag)
		ft_putstr_fd("\n", STDOUT_FILENO);

}

